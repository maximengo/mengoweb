---
import Layout from "../layouts/Layout.astro";
import Bloque from "../components/Bloque.astro";
import Yo from "../components/Yo.astro";
import TimeLine from "../components/TimeLine.astro";
import Especialidades from "../layouts/Especialidades.astro";
import Proyectos from "../layouts/Proyectos.astro";
---

<Layout title="Maxi Mengoni Dev">
	<div class="flex flex-col sm:grid sm:grid-cols-2 gap-4 lg:grid-cols-3 lg:gap-6">
		
		<Bloque data={{ "data-aos": "fade-right" }}>
			<Yo />
		</Bloque>

		<Bloque data={{ "data-aos": "fade-right" }}>
			<TimeLine />
		</Bloque>

		<Bloque clase="col-span-2 lg:col-span-1" data={{ "data-aos": "fade-right" }}>
			<h1 class="text-2xl font-bold mb-4">Conocimientos</h1>
			<Especialidades />
		</Bloque>
	</div>

	
		<Proyectos />
	
</Layout>
