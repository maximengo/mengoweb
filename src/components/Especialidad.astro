---
const { title } = Astro.props;
---

<div
     data-tooltip-target={`tooltip-${title}`}
     class="grid place-content-center rounded-lg p-4 transition-colors bg-gray-100 dark:bg-slate-700 border dark:border-white/10 hover:bg-gray-200 dark:hover:bg-slate-600 hover:cursor-help"
>
     <slot />

     <div
          id={`tooltip-${title}`}
          role="tooltip"
          class="absolute z-10 invisible inline-block px-3 py-2 text-sm  text-white font-bold transition-opacity duration-300 bg-gray-900 rounded-lg shadow-sm opacity-0 tooltip dark:bg-cyan-700"
     >
          {title}
          <div class="tooltip-arrow" data-popper-arrow></div>
     </div>
</div>
